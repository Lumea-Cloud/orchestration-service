# Service Configuration
PORT=8003
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_platform
DB_USER=ai_platform
DB_PASSWORD=ai_platform_dev_2024
DB_SCHEMA=orchestration

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Kubernetes Configuration
K8S_MODE=out-of-cluster
K8S_NAMESPACE=ai-platform
K8S_API_SERVER=https://your-cluster-api:6443
K8S_TOKEN=your-service-account-token
K8S_CA_CERT=/path/to/ca.crt

# vLLM Configuration
VLLM_IMAGE=vllm/vllm-openai:latest
VLLM_RUNTIME_CLASS=nvidia
VLLM_DEFAULT_GPU_MEMORY=48
VLLM_DEFAULT_PORT=8000

# GPU Configuration
GPU_TYPE=nvidia-l40s
GPU_MEMORY_GB=48
MAX_GPUS_PER_NODE=2

# Resource Limits (Default)
DEFAULT_CPU_REQUEST=4
DEFAULT_CPU_LIMIT=8
DEFAULT_MEMORY_REQUEST=32Gi
DEFAULT_MEMORY_LIMIT=64Gi

# Deployment Configuration
DEPLOYMENT_TIMEOUT=300
POD_STARTUP_TIMEOUT=600
HEALTH_CHECK_INTERVAL=30
RESOURCE_TRACK_INTERVAL=60

# Service Mesh Configuration
SERVICE_TYPE=NodePort
NODE_PORT_MIN=30000
NODE_PORT_MAX=32767

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# Internal Service URLs
AUTH_SERVICE_URL=http://localhost:8001
GATEWAY_SERVICE_URL=http://localhost:8000
MODEL_REGISTRY_URL=http://localhost:8002

# ===========================================================================
# STORAGE CONFIGURATION - Choose one of the three modes below
# ===========================================================================

# Option 1: NFS Storage (Default)
# Use this when you have an NFS server with model files
STORAGE_MODE=nfs
NFS_SERVER=192.168.1.100
NFS_PATH=/models
MODEL_MOUNT_PATH=/models

# Option 2: CSI Dynamic Provisioning
# Use this for cloud environments with CSI drivers
# Uncomment and configure these lines for CSI mode:
# STORAGE_MODE=csi
# STORAGE_CLASS=ai-platform-models
# PVC_SIZE=1Ti
# MODEL_MOUNT_PATH=/models

# Option 3: Existing PVC
# Use this when you have pre-provisioned persistent volumes
# Uncomment and configure these lines for PVC mode:
# STORAGE_MODE=pvc
# PVC_NAME=existing-models-pvc
# MODEL_MOUNT_PATH=/models